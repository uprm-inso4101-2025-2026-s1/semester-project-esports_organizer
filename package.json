{
  "name": "esports-organizer-root",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "emulator:start": "firebase emulators:start --project demo-esports-organizer --only firestore,functions,auth",
    "seed": "node .github/esports-organizer/src/scripts/seedEmulator.js",
    "mark:final": "node .github/esports-organizer/src/scripts/markFinal.js",
    "verify:derived": "node .github/esports-organizer/src/scripts/verifyDerived.js",
    "install:functions": "npm --prefix .github/esports-organizer/src/functions ci || npm --prefix .github/esports-organizer/src/functions install",
    "setup": "npm ci && npm run install:functions",
    "functions:test": "npm --prefix .github/esports-organizer/src/functions run test:load",
    "clear:lock": "node .github/esports-organizer/src/scripts/clearLock.js",
    "verify:match": "node .github/esports-organizer/src/scripts/verifyMatch.js",
    "dev:clean-ports": "npx kill-port 4444 4555 58180 5002 4000",
    "dev": "npm run dev:clean-ports && concurrently \"npm run emulator:start\" \"npm --prefix .github/esports-organizer run dev:site\"",
    "print:ui": "printf \"Firebase Emulator UI: http://127.0.0.1:4000\\n\"",
    "open:ui": "open http://127.0.0.1:4000",
    "ui": "npm run print:ui && npm run open:ui",
    "clear:emulator": "node .github/esports-organizer/src/scripts/clearEmulator.js",
    "force:recalc": "node .github/esports-organizer/src/scripts/forceRecalc.js",
    "verify:queue": "node .github/esports-organizer/src/scripts/verifyQueue.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "firebase-tools": "^13.35.1"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "react-icons": "^5.5.0"
  }
}
